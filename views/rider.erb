<h2><a href ="/"><< Back</a></h2>
<div class= "row">
<div class = "col-md-6">


<h1><u>Available Trains</u><h1>
<% if @trains.any?() %>
<ul>
<% @trains.each do |train| %>
      <li><a href="/train_info/<%= train.id %>"><%= train.name %></a></li>
    <% end %>
  </ul>
<% else %> 
  <p>There are currently no trains </p>
<% end %>
</div>



<h1><u>Available Cities</u><h1>
<% if @cities.any?() %>
<ul>
<% @cities.each do |city| %>
      <li><a href="/city_info/<%= city.id %>"><%= city.name %></a></li>
    <% end %>
  </ul>
<% else %> 
  <p>There are currently no cities </p>
<% end %>
</div>
